/var/log/nginx/*.log {
        daily
        missingok
        rotate 52
        compress
        delaycompress
        notifempty
        create 640 nobody adm
        sharedscripts
        postrotate
                if [ -f /var/run/nginx.pid ]; then
                        kill -USR1 `cat /var/run/nginx.pid`
                fi
        endscript
}

/var/log/nginx/domains/* {
        daily
        missingok
        rotate 52
        compress
        delaycompress
        notifempty
        create 640 nobody adm
        sharedscripts
        prerotate
                killall -SIGHUP --quiet splitlogs # flush logs to disk if needed
                exit 0
        endrotate
        postrotate
                if [ -f /var/run/nginx.pid ]; then
                        kill -USR1 `cat /var/run/nginx.pid`
                fi
                /usr/local/cpanel/scripts/ea-nginx-logrotate $1.1
        endscript
}
