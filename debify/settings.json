        "ea-ruby27-mod-passenger",
        "ea-ruby27-ruby-devel",
        "ea-ruby27-rubygem-passenger",
        "ea-ruby27-rubygem-rake",
        "libcurl4-gnutls-dev",
        "libopenssl-devel",
        "redhat-lsb-core",
        "ea-ruby27",
        "initscripts",
        "apache24-passenger"
    ],
    "add_to_build_requires": [
        "libcurl4-openssl-dev",
        "ea-passenger-src",
        "ruby",
        "ruby-dev",
        "libaio-dev",
        "libaio1",
        "linux-libc-dev",
        "libc6-dev"
    ],
    "add_to_requires": {
        "ea-nginx": [
            "ea-apache24-mod-passenger",
            "ea-passenger-runtime",
            "libaio1"
        ]
    },
    "fix_dh_usrlocal": 1
